/** UI Buttons */
.el-button
    min-width 148px
    border-radius var(--el-border-radius-small)
    &:hover
        box-shadow var(--el-box-shadow-light)
    &--text
        color $regular
        &:not(.is-disabled):focus
        &:not(.is-disabled):hover
            color $regular

    &--info
        --el-button-text-color $purple
        --el-button-hover-text-color $purple
        &.is-plain
            --el-button-hover-text-color $purple


/** UI Form */
.el-form
    &-item
        align-items center
        &__label
            align-items center

/** UI DatePicker */
.el-date-picker
    .el-date-table td.today .el-date-table-cell__text
        color #2CC990

/** UI Notification */
.el-notification
    &__content
        text-align left
